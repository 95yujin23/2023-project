				MEMBER
				ORDER BY MEM_ID		
	</select>

	<select id="selectmember" resultType="MemberVO">
		SELECT * FROM MEMBER
		WHERE MEM_NICK = #{memNick}
	</select>
	
	<insert id="insertmember">
	INSERT INTO MEMBER
	(MEM_NICK, MEM_ID, MEM_PWD, MEM_MAIL, MEM_FM, MEM_AGE, MEM_AREA)
	VALUES (#{memNick}, #{memId}, #{memPwd},  #{memMail}, #{memFm}, #{memAge}, #{memArea})
	</insert>
	
	<update id="updatemember">
	UPDATE MEMBER SET 
	MEM_PWD=#{memPwd}, MEM_MAIL=#{memMail}, MEM_AREA=#{memArea}
	WHERE MEM_NICK=#{memNick}
	</update>
	
	<update id="deletemember">
	UPDATE MEMBER SET
	MEM_CHECK='n'
	WHERE MEM_NICK=#{memNick}
	</update>
	
	<update id="kickmember">
	UPDATE MEMBER SET
	MEM_CHECK='x'
	WHERE MEM_NICK=#{memNick}
	</update>
	
</mapper>