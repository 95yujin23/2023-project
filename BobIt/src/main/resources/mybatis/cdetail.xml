	</select>
	
	<insert id="insertcdetail">
	INSERT INTO TBL_CDETAIL
	(MEM_NICK, CDETAIL_CN, CDETAIL_DATE)
	VALUES (#{memNick}, #{cdetailCn}, now())
	</insert>
	
	<update id="updatecdetail">
	UPDATE TBL_CDETAIL SET 
	CDETAIL_CN=#{cdetailCn}
	WHERE CDETAIL_NO=#{cdetailNo}
	</update>
	
	<delete id="deletecdetail">
	DELETE FROM TBL_CDETAIL 
	WHERE CDETAIL_NO=#{cdetailNo}
	</delete>
	
