	<select id="selectchat" resultType="ChatVO">
		SELECT * FROM TBL_CHAT
		WHERE CHAT_NO = #{chatNo} 
	</select>
	
	<insert id="insertchat">
	INSERT INTO TBL_CHAT
	(MEM_NICK, CHAT_ADMIN, CHAT_SJ, CHAT_DATE, CHAT_COMP)
	VALUES (#{memNick}, #{chatAdmin}, #{chatSj},  now(), #{chatComp})
	</insert>
	
	<update id="updatechat">
	UPDATE TBL_CHAT SET 
	CHAT_SJ=#{chatSj}
	WHERE CHAT_NO=#{chatNo}
	</update>
	
	<delete id="deletechat">
	DELETE FROM TBL_CHAT
	WHERE CHAT_NO=#{chatNo}
	</delete>
	
