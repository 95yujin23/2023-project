				BOARD ORDER BY BOARD_NO		
	</select>

	<select id="selectboard" resultType="BoardVO">
		SELECT * FROM BOARD
		WHERE BOARD_NO = #{boardNo}
	</select>
	
	<insert id="insertboard">
	INSERT INTO BOARD
	(BOARD_NO, MEM_NICK, BOARD_SJ, BOARD_CN, BOARD_DATE)
	VALUES (#{boardNo}, #{memNick}, #{boardSj}, #{boardCn},  now())
	</insert>
	
	<update id="updateboard">
	UPDATE BOARD SET 
	BOARD_SJ=#{boardSj}, BOARD_CN=#{boardCn}
	WHERE BOARD_NO=#{boardNo}
	</update>
	
	<delete id="deleteboard">
	DELETE FROM BOARD
	WHERE BOARD_NO=#{boardNo}
	</delete>
	
